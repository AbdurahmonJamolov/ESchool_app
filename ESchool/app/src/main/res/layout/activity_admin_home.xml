<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AdminHomeActivity">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/transparent_circle"
        android:padding="15dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:text="E-School"
        android:textSize="12dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">

        <Button
            android:id="@+id/btn_admin_class_room"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Class Room"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_admin_edu_materials"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Education Materials"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_admin_materials_content"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Materials Content"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_admin_exam"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Exam"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_admin_question"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>